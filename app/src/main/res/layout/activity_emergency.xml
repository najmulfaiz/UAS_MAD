<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmergencyActivity"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bila teriadi sesuatu kepada kendaraan anda kami siap membantu anda. Tekan tombol dibawah ini untuk mendapatkan lavanan
Emergency dari QUICKFIX."
            android:textAlignment="center"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnToWhatsapp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hubungi Sekarang"
            android:textColor="@color/white"
            android:background="@drawable/shape_button"/>

    </LinearLayout>

</RelativeLayout>